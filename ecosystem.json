{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  apps : [{
      name      : "ewb.io",
      script    : "app.js",
      env: {
        COMMON_VARIABLE: "true",
      },
      env_production : {
        NODE_ENV: "production"
      }
  }],

  /**
   * Deployment section
   * http://pm2.keymetrics.io/docs/usage/deployment/
   */
  deploy : {
    production : {
      user : "root",
      host : "ewb.io",
      ref  : "origin/master",
      repo : "git@gitlab.com:etano/ewb.io.git",
      path : "/var/www/ewb.io",
      "post-deploy" : "npm install --production && cp nginx.conf /etc/nginx/sites-available/default && service nginx restart && pm2 startOrRestart ecosystem.json --env production",
      env : {
        NODE_ENV: "production"
      }
    }
  }
}
